<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:ignore="all">

    <androidx.appcompat.widget.DialogTitle
        android:id="@+id/title"
        style="?android:attr/windowTitleStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:ellipsize="end"
        android:paddingLeft="?attr/dialogPreferredPadding"
        android:paddingTop="@dimen/abc_dialog_padding_top_material"
        android:paddingRight="?attr/dialogPreferredPadding"
        android:singleLine="true"
        android:text="Card Picker"
        android:textAlignment="viewStart"
        android:textSize="@dimen/textsize_large"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="?attr/dialogPreferredPadding"
        android:paddingTop="?attr/dialogPreferredPadding"
        android:paddingRight="?attr/dialogPreferredPadding">

        <com.bilibili.magicasakura.widgets.TintImageView
            android:id="@+id/theme_pink"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_card_48dp"
            android:scaleType="centerInside"
            android:src="@drawable/selector_pick_item"
            app:backgroundTint="@color/pink"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:visibility="invisible"/>

        <com.bilibili.magicasakura.widgets.TintImageView
            android:id="@+id/theme_purple"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_card_48dp"
            android:scaleType="centerInside"
            android:src="@drawable/selector_pick_item"
            app:backgroundTint="@color/purple"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:visibility="invisible"/>

        <com.bilibili.magicasakura.widgets.TintImageView
            android:id="@+id/theme_blue"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_card_48dp"
            android:scaleType="centerInside"
            android:src="@drawable/selector_pick_item"
            app:backgroundTint="@color/blue"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:visibility="invisible"/>

        <com.bilibili.magicasakura.widgets.TintImageView
            android:id="@+id/theme_green"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_card_48dp"
            android:scaleType="centerInside"
            android:src="@drawable/selector_pick_item"
            app:backgroundTint="@color/green"/>
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="?attr/dialogPreferredPadding"
        android:paddingTop="?attr/dialogPreferredPadding"
        android:paddingRight="?attr/dialogPreferredPadding">

        <com.bilibili.magicasakura.widgets.TintImageView
            android:id="@+id/theme_green_light"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_card_48dp"
            android:scaleType="centerInside"
            android:src="@drawable/selector_pick_item"
            app:backgroundTint="@color/green_light"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:visibility="invisible"/>

        <com.bilibili.magicasakura.widgets.TintImageView
            android:id="@+id/theme_yellow"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_card_48dp"
            android:scaleType="centerInside"
            android:src="@drawable/selector_pick_item"
            app:backgroundTint="@color/yellow"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:visibility="invisible"/>

        <com.bilibili.magicasakura.widgets.TintImageView
            android:id="@+id/theme_orange"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_card_48dp"
            android:scaleType="centerInside"
            android:src="@drawable/selector_pick_item"
            app:backgroundTint="@color/orange"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:visibility="invisible"/>

        <com.bilibili.magicasakura.widgets.TintImageView
            android:id="@+id/theme_red"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_card_48dp"
            android:scaleType="centerInside"
            android:src="@drawable/selector_pick_item"
            app:backgroundTint="@color/red"/>
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/buttonPanel"
        style="?attr/buttonBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingTop="?attr/dialogPreferredPadding"
        android:paddingRight="10dp"
        android:paddingBottom="20dp">

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:visibility="invisible"/>

        <com.bilibili.magicasakura.widgets.TintButton
            android:id="@android:id/button2"
            style="?attr/buttonBarNegativeButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/padding"
            android:background="?attr/selectableItemBackground"
            android:text="@string/cancel"
            android:textColor="@color/selector_primary_click"/>

        <com.bilibili.magicasakura.widgets.TintButton
            android:id="@android:id/button1"
            style="?attr/buttonBarPositiveButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:text="@string/confirm"
            android:textColor="@color/selector_primary_click"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.appcompat.widget.LinearLayoutCompat>
